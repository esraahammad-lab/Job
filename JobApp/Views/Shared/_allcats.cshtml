@model IEnumerable<JobApp.Models.Category>
<input type="hidden" id="hdnID" value="" />

<style>
    .button {
        background-color: #4CAF50; /* Green */
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    }





    .button3 {
        background-color: white;
        color: black;
        border: 2px solid #f44336;
    }




    .button5 {
        background-color: white;
        color: black;
        border: 2px solid #555555;
    }

    .button3:hover {
        box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
        background-color: red;
        color: white;
    }

    .button5:hover {
        box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
        background-color: black;
        color: white;
    }
</style>



<table class="table" id="TableID">
    <tr>
        <th>
            <h4 style="font-size: 23px;">الاسم الرئيسي للوظيفة</h4>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>

                <a href="javascript:;" title="Edit"
                   onclick="Edit(@item.IDCategory,'@item.Name')">
                    <i class="fas fa-pen-alt" style="font-size:25px;"></i>
                </a>&nbsp;&nbsp;
                <a href="javascript:;" title="Delete"
                   onclick="ModBtn(@item.IDCategory)">
                    <i class="fas fa-trash-alt" style="font-size:25px;color:red;"></i>
                </a>




                <div id="myModal" class="modal">

                    <!-- Modal content -->
                    <div class="modal-content">
                        <div class="modal-header">
                            <span class="close" id="Close">&times;</span>
                            <h2 style="text-align:left;">Delete</h2>
                        </div>
                        <div class="modal-body">
                            <p style="text-align:left;">? Are you sure you want to delete This </p>

                        </div>
                        <div class="modal-footer">

                            <button class="button button5 pull-right" style="position: absolute; right: 0;" id="Cancel">Cancel</button>
                            <a href="javascript:;" class="button button3" id="ButtonDelete">Delete</a>
                        </div>
                    </div>
                </div>
            </td>

        </tr>
    }

</table>
